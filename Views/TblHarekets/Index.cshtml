@model IEnumerable<kutuphane24.Models.TblHareket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlısTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.İadeTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitapNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UyeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Personel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlısTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.İadeTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapNavigation.KitapId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UyeNavigation.UyeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HareketId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HareketId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HareketId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

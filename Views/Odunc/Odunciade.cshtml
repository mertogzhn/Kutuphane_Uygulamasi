@model kutuphane24.Models.TblHareket

@{
    ViewData["Title"] = "Odunciade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kitap İade</h1>

@using (Html.BeginForm("Odunciade", "Odunc", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(k => k.HareketId, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.KitapNavigation.Ad, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(k => k.UyeNavigation.Ad, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(k => k.Personel, new { @class = "form-control" })
        <br />
        <label>Alış tarihi</label>
        @Html.TextBoxFor(k => k.AlısTarih, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Normal İade tarihi</label>
        @Html.TextBoxFor(k => k.İadeTarih, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        @*<label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />*@

    </div>
    <div>
        <button class="btn btn-group" style="background-color:#64d8ca; color:white">Ödünç Kitabı Geri Al</button>
    </div>
}